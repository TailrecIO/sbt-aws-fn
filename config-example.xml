<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns="http://schema.tailrec.io/sbt-aws-fun"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://schema.tailrec.io/sbt-aws-fun http://www.tailrec.io/schema/sbt-aws-fun-1.0.xsd">
    <defaults>
        <regions>
            <region>us-west-1</region>
            <region>us-west-2</region>
            <region>us-west-2</region>
        </regions>
        <role>lambda_basic_execution</role>
        <memory>128</memory>
        <timeout>30</timeout>
    </defaults>
    <artifacts>
        <artifact id="image" minified="true" />
    </artifacts>
    <functions>
        <function>
            <name>img-resizer</name> 
            <artifact>image</artifact>
            <regions>
                <region>us-west-1</region>
            </regions>
            <role>lambda_basic_execution</role>
            <description>Create a thumbnail 36x36 when a new object is put in S3</description>
            <memory>192</memory>
            <timeout>10</timeout>
            <handler>
                <class>io.tailrec.lambda.ImageResizer</class>
                <method>resize</method>
                <return-type>void</return-type>
            </handler>
            <events>
                <http>
                    <api-name></api-name>
                    <resource-name></resource-name>
                    <method></method>
                    <deployment-stage></deployment-stage>
                    <security></security>
                </http>
            </events>
        </function>
    </functions>
</configuration>
